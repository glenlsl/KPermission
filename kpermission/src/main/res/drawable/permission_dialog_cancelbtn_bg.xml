<?xml version="1.0" encoding="utf-8"?><!-- 确认对话框样式【含有图标、内容、左右按钮】布局文件 -->
<selector xmlns:android="http://schemas.android.com/apk/res/android"
          android:shape="rectangle">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <!-- 填充 -->
            <solid android:color="#80656A6A"/><!-- 填充的颜色 -->
            <!-- 圆角半径 -->
            <corners android:radius="8dp"/>
        </shape>
    </item>

    <!-- 正常时的图片资源 -->
    <item>
        <shape android:shape="rectangle">
            <!-- 填充 -->
            <solid android:color="#E7909999"/><!-- 填充的颜色 -->
            <!-- 圆角半径 -->
            <corners android:radius="8dp"/>
        </shape>
    </item>

</selector>